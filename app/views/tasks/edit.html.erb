<form action="/tasks/<%= @task.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h3>Edit</h3>
  <input type='text' name='task[title]' value="<%= @task.title %>" class="input"/><br/>
  <textarea name='task[description]' class="input"><%= @task.description %></textarea><br/>
  <input type='submit'/>
</form>
